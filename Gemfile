# Concurrent Ruby - Modern concurrency tools for Ruby.
#
# https://github.com/ruby-concurrency/concurrent-ruby
gem 'concurrent-ruby', require: 'concurrent', groups: %i[dev live test]

# dotenv - Shim to load environment variables from .env files.
#
# https://github.com/bkeepers/dotenv
gem 'dotenv', groups: %i[dev live test]

# Druuid - Date-relative (and relatively universally unique) UUID generation.
#
# https://github.com/recurly/druuid
gem 'druuid', groups: %i[dev live test]

# EventMachine - An event-driven I/O and lightweight concurrency library for Ruby.
#
# https://github.com/eventmachine/eventmachine/
gem 'eventmachine', groups: %i[dev live]

# Faker - Generates fake data.
#
# https://github.com/faker-ruby/faker
gem 'faker', groups: %i[dev test]

# get_process_mem - get the memory usage of a process
#
# https://github.com/schneems/get_process_mem
gem 'get_process_mem', groups: %i[dev live test]

# http.rb - an easy-to-use client library for making requests from Ruby.
#
# https://github.com/httprb/http
gem 'http', groups: %i[dev live test]

# Logger - A simple but powerful logging utility to output messages.
#
# https://github.com/ruby/logger
gem 'logger', groups: %i[dev live test]

# Oj (OptimizedJSON) - A fast JSON parser and Object marshaller.
#
# https://github.com/ohler55/oj
gem 'oj', groups: %i[dev live test]

# Pastdel - Provides independent coloring component for TTY toolkit.
#
# https://github.com/piotrmurach/pastel
gem 'pastel', groups: %i[dev live test]

# Pg - The Ruby interface to the PostgreSQL RDBMS.
#
# https://github.com/ged/ruby-pg
gem 'pg', groups: %i[dev live test]

# pry - A runtime developer console and IRB alternative with powerful introspection capabilities.
#
# https://github.com/pry/pry
gem 'pry', groups: %i[dev test]

# Rake - A Make-like program implemented in Ruby.
#
# https://github.com/ruby/rake
gem 'rake'

# SimpleCov - A code coverage analysis tool for Ruby.
#
# https://github.com/simplecov-ruby/simplecov
gem 'simplecov', groups: %i[dev test]

# Sequel - A simple, flexible, and powerful SQL database access toolkit for Ruby.
#
# https://github.com/jeremyevans/sequel
gem 'sequel', groups: %i[dev live test]

# sqlite3 - Allows Ruby programs to interface with the SQLite3 database engine.
#
# https://github.com/sparklemotion/sqlite3-ruby
gem 'sqlite3', groups: %i[dev live test]

# YARD - A documentation generation tool for the Ruby programming language.
#
# https://github.com/lsegal/yard
gem 'yard', groups: %i[dev test]



